
@model IList<ItemViewModel>;
<head>
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
        <link href="~/lib/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />
        <script src="~/lib/jquery/dist/jquery.js"></script>
    </head>
@{
    ViewData["Title"] = "Item list";
}


<h1>Item list</h1>

<table id="BatchTable" class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Photo</th>
            <th>Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Detail</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var f in Model)
        {
        <tr>
            <td>
                @if (!string.IsNullOrEmpty(f.PhotoPath))
                {
                    <img class="img-fluid" src="@Url.Content(f.PhotoPath)" alt="Computer Photo" />
                }
                else
                {
                    <span>No Photo</span>
                }
            </td>
            <td>@f.Name</td>
            <td>@f.Quantity</td>
            <td>@f.Price</td>
            <td>
                <pre class="formatted-data">@f.Detail</pre>                
            </td>
        </tr>
        }
    </tbody>

</table>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('#BatchTable').DataTable({
                "paging": true,
                "ordering": true,
                "searching": true,
                "lengthChange": true,
                "info": true,
                "autoWidth": false,
                "language": {
                    "paginate": {
                        "previous": "<",
                        "next": ">"
                    }
                }
            });
        });
    </script>}

