@model IList<OrderViewModel>

<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />
</head>

@{
    ViewData["Title"] = "Order List";
}



<h1>Order List</h1>

<table id="BatchTable" class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Date</th>
            <th>Bill Photo</th>
            <th>User Name</th>
            <th>Item Name</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total Price</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var f in Model)
        {
        <tr>
            <td>@f.Date.ToString("dd-MM-yyyy")</td>
            <td>
                @if (!string.IsNullOrEmpty(f.PhotoPath))
                {
                    <img class="img-fluid" src="@Url.Content(f.PhotoPath)" alt="Computer Photo" />
                }
                else
                {
                    <span>No Photo</span>
                }
            </td>
            <td>@f.UserName</td>
            <td>
                @f.ItemName
            </td>
            <td>
                <pre>@f.Quantity</pre>
            </td>     
            <td>@f.Price</td>
            <td>@f.TotalPrice</td>
            <td>@f.PhoneNumber</td>
            <td>@f.Address</td>
            <td>
                <a href="/Home/OrderDelete?Id=@f.Id" onclick="return confirm('Please confirm')" class="btn btn-danger" role="button">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('#BatchTable').DataTable({
                "paging": true,
                "ordering": true,
                "searching": true,
                "lengthChange": true,
                "info": true,
                "autoWidth": false,
                "language": {
                    "paginate": {
                        "previous": "<",
                        "next": ">"
                    }
                }
            });
        });
    </script>
}
